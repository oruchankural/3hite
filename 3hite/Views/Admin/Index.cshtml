@using _3hite.Models.Siniflar;
@model ICollection <Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>Sipariş ID</td>
        <td>Ürün ID</td>
        <td>Mesaj</td>
        <td>isim soyisim</td>
        <td>mail</td>
        <td>telefon</td>
        <td>ücret</td>

    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.OrderID</td>
            <td>@x.Product</td>
            <td>@x.Mesage</td>
            <td>@x.Name @x.Surname</td>
            <td>@x.Mail</td>
            <td>@x.Phone</td>
            <td>@x.Price ₺</td>


        </tr>
    }
</table>

